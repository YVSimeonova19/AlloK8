@model ResetPasswordVM
@{
    Layout = "_AuthLayout";
}

<h4>@T.ResetPasswordTitle</h4>
<form class="pt-3 user" asp-action="ResetPassword" asp-route-email="@Model.Email" asp-route-token="@Model.Token" method="post">
    <input asp-for="Email" type="hidden">
    <input asp-for="Token" type="hidden">
    <div class="form-group">
        <input type="password"
               asp-for="Password"
               class="form-control form-control-lg"
               id="exampleInputPassword1"
               placeholder="@T.PasswordPlaceholderText">
        <span class="text-danger text-small" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input type="password"
               asp-for="ConfirmPassword"
               class="form-control form-control-lg"
               id="exampleInputPassword1"
               placeholder="@T.ConfirmPasswordPlaceholderText">
        <span class="text-danger text-small" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="mt-3">
        <button type="submit"
                class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
            @T.ResetPasswordButtonText
        </button>
    </div>
</form>