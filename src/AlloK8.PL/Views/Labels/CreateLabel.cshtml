@model LabelVM

@{
    Layout = "_Layout";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">create label</h4>
            <p class="card-description">subtitle</p>
            <form class="forms-sample" asp-controller="Labels" asp-action="CreateLabel" method="post">
                <div class="form-group">
                    <label for="name">title</label>
                    <input asp-for="Title"
                           class="form-control"
                           id="name"
                           autocomplete="off"
                           placeholder="title">
                </div>
                <div class="form-group">
                    <label for="description">@T.ShortDescriptionLabelText</label>
                    <input asp-for="Description"
                           class="form-control"
                           id="description"
                           autocomplete="off"
                           placeholder="@T.ShortDescriptionLabelText">
                </div>
                <div class="form-group">
                    <label for="color">color</label>
                    <input asp-for="Color"
                           class="form-control"
                           id="color"
                           autocomplete="off"
                           placeholder="color">
                </div>
                <button type="submit"
                        class="btn btn-primary mr-2">create label</button>
            </form>
        </div>
    </div>
</div>