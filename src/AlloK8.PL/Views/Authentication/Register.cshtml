@model RegisterVM
@{
    Layout = "_AuthLayout";
}

<h4>@T.SignUpHeader1Text</h4>
<h6 class="font-weight-light">@T.SignUpHeader2Text</h6>
<form class="pt-3" asp-action="Register" method="post">
    <div class="form-group">
        <input asp-for="Email" 
            class="form-control form-control-lg" 
            id="exampleInputEmail1" 
            placeholder="@T.EmailPlaceholderText">
        <span class="text-danger text-small" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <input type="password"
            asp-for="Password" 
            class="form-control form-control-lg" 
            id="exampleInputPassword1" 
            placeholder="@T.PasswordPlaceholderText">
        <span class="text-danger text-small" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input type="password"
            asp-for="ConfirmPassword" 
            class="form-control form-control-lg" 
            id="exampleInputPassword1" 
            placeholder="@T.ConfirmPasswordPlaceholderText">
        <span class="text-danger text-small" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="mt-3">
        <button type="submit"
                class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
            @T.RegisterButtonText
        </button>
    </div>
    <div class="text-center mt-4 font-weight-light">
        @T.HaveAccountText
        <a href="@Url.Action("Login")" class="text-primary">
            @T.LoginLinkText
        </a>
    </div>
</form>