@Model CalendarVM

@{
    Layout = "_Layout";
    var serializedTasks = System.Text.Json.JsonSerializer.Serialize(Model.Tasks);
}

<div class="content-wrapper">
  <div class="card">
    <div class="card-body">
      <div id="calendar"></div>
    </div>
  </div>
</div>

<script src="~/fullcalendar-6.1.15/dist/index.global.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var calendarEl = document.getElementById('calendar');

    var tasks = @Html.Raw(serializedTasks);

    console.log("Loaded Tasks:", tasks);

    var events = tasks.map(function (task) {
      return {
        title: task.title,
        start: task.start,
        end: task.end || task.start
      };
    });

    console.log("Formatted Events:", events);
    
    var calendar = new FullCalendar.Calendar(calendarEl, {
      selectable: true,
      dayMaxEvents: true,
      events: events
    });

    calendar.render();
  });
</script>

<style>
  #calendar {
    max-width: 1100px;
    margin: 0 auto;
  }
  
  .fc-scroller {
    scrollbar-width: none;
  }
</style>